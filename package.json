{
  "name": "worldeditlab",
  "version": "1.0.3",
  "description": "A fancy and simple UI for up- & downloading schematics and heightmaps",
  "main": "dist/app.js",
  "scripts": {
    "start": "node .",
    "serve": "concurrently -r \"yarn serve:tsc\" \"yarn serve:css\" \"yarn serve:js\"",
    "serve:css": "postcss -w assets/styles/tailwind.css -o public/styles/style.css",
    "serve:tsc": "tsc-watch -p ./src --onSuccess \"node .\"",
    "serve:js": "webpack --watch",
    "build": "yarn build:tsc && yarn build:js && yarn build:css",
    "build:tsc": "tsc -p ./src",
    "build:css": "postcss assets/styles/tailwind.css -o public/styles/style.css",
    "build:js": "webpack",
    "lint": "yarn lint:ts && yarn lint:css",
    "lint:ts": "npx eslint .",
    "lint:css": "npx stylelint \"assets/**/*.css\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/playlegend/WorldEditLab.git"
  },
  "author": "playlegend.net",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/playlegend/WorldEditLab/issues"
  },
  "homepage": "https://github.com/playlegend/WorldEditLab#readme",
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@types/bcrypt": "^3.0.1",
    "@types/ejs": "^3.0.6",
    "@types/express": "^4.17.11",
    "@types/express-fileupload": "^1.1.6",
    "@types/express-session": "^1.17.3",
    "@types/passport": "^1.0.6",
    "@typescript-eslint/parser": "^4.22.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.2",
    "cssnano": "^5.0.1",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "postcss": "^8.2.12",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.1",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "tailwindcss": "^2.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.4",
    "webpack-cli": "^4.6.0",
    "webpack": "^5.49.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "express-session": "^1.17.1",
    "passport": "^0.4.1",
    "passport-custom": "^1.1.1",
    "sequelize": "^6.6.2",
    "sqlite3": "^5.0.2"
  }
}
